<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
               x:Class="MindCheck.Views.VideoAdPopupPage"
               CanBeDismissedByTappingOutsideOfPopup="False"
               Size="300, 300">

    <VerticalStackLayout VerticalOptions="CenterAndExpand" Spacing="20">
        <Label Text="Watch this ad!" HorizontalOptions="Center" />
        <Image Source="dva_meme.jpeg"
               Aspect="AspectFit"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               HeightRequest="300"
               WidthRequest="300"/>
        <Button Text="Close" Clicked="OnCloseButtonClicked" />
    </VerticalStackLayout>
</toolkit:Popup>
